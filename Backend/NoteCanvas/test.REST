###

# Create a new note
POST {{host}}/notes/create/1/ HTTP/1.1
Content-Type: application/json

{
  "posX": 100,
  "posY": 100,
  "height": 200,
  "width": 200,
  "pinned": false,
  "color": "#ff0000"
}

###

# Update a note
# Note: Replace `1` with the actual note ID you wish to update
PUT {{host}}/notes/update/1/ HTTP/1.1
Content-Type: application/json

{
  "notesBody": "This is an updated sample note body.",
  "posX": 150,
  "posY": 150,
  "height": 250,
  "width": 250,
  "pinned": true,
  "color": "#00ff00"
}

###

# Delete a note
# Note: Replace `1` with the actual note ID you wish to delete
DELETE {{host}}/notes/delete/4/ HTTP/1.1

###

# Pin/Unpin a note
# Note: Replace `1` with the actual note ID you wish to pin/unpin
POST {{host}}/notes/pin/1/ HTTP/1.1
Content-Type: application/json

{
  "pin": true // Or false, depending on the desired action
}
